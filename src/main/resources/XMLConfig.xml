<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:XMLConfig.properties"/>

    <bean id="calculator" class="HomeWork05.XMLConfig.Calculator">
        <property name="minusService" ref="minusService"/>
        <property name="plusService" ref="plusService"/>
        <property name="a" value="${calculator.a}"/>
        <property name="b" value="${calculator.b}"/>
    </bean>

    <bean id="minusService" class="HomeWork05.XMLConfig.MinusService"/>
    <bean id="plusService" class="HomeWork05.XMLConfig.PlusService"/>

</beans>